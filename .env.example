# ================================================================================
# Environment Variables Template for Ideal Livs Store
# ================================================================================
# Copy this file to .env.local and fill in your actual values

# WordPress Configuration
NEXT_PUBLIC_WORDPRESS_URL="https://your-wordpress-site.com"
NEXT_PUBLIC_WORDPRESS_API_URL="https://your-wordpress-site.com/wp-json"
WORDPRESS_API_URL="https://your-wordpress-site.com/wp-json"

# WooCommerce REST API Credentials
WORDPRESS_CONSUMER_KEY="your_consumer_key_here"
WORDPRESS_CONSUMER_SECRET="your_consumer_secret_here"

# Fourlines MCP API (Optional)
FOURLINES_MCP_KEY="your_mcp_key_here"
NEXT_PUBLIC_FOURLINES_MCP_KEY="your_mcp_key_here"

# Cache Revalidation
WORDPRESS_WEBHOOK_SECRET="your-webhook-secret"

# Site URL - Update for production
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Email Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE="tls"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"
ADMIN_EMAIL="admin@example.com"
SECONDARY_ADMIN_EMAIL="admin@example.com"
FROM_EMAIL="noreply@example.com"

# Stripe Configuration (Use test keys for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_key_here"
STRIPE_SECRET_KEY="sk_test_your_key_here"
